@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" class=" text-white fw-bold">
		
			<label class="col-form-label text-white fw-bold" asp-for="Email">Email :</label>
			<input class="text" asp-for="Email" placeholder="Your Email Address">
			<span class="text-danger" asp-validation-for="Email"></span>
			<br />
			<label class="col-form-label text-white fw-bold" asp-for="Password">Password :</label>
			<input class="text" asp-for="Password" placeholder="Your Password">
			<span class="text-danger" asp-validation-for="Password"></span>
			<br />
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Sign Up Now!</a></p>
	</div>
</div>

@section ValidationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}
