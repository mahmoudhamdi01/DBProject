@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" class=" text-white fw-bold">
			<label class="col-form-label text-white fw-bold" asp-for="FirstName">FirstName :</label>
			<input class="text" asp-for="FirstName" placeholder="Your First Name">
			<span class="text-danger" asp-validation-for="FirstName"></span>
			<br />
			<label class="col-form-label text-white fw-bold" asp-for="LastName">LastName :</label>
			<input class="text" asp-for="LastName" placeholder="Your Last Name">
			<span class="text-danger" asp-validation-for="LastName"></span>
			<br />
			<label class="col-form-label text-white fw-bold" asp-for="Email">Email :</label>
			<input class="text" asp-for="Email" placeholder="Your Email Address">
			<span class="text-danger" asp-validation-for="Email"></span>
			<br />
			<label class="col-form-label text-white fw-bold" asp-for="Password">Password :</label>
			<input class="text" asp-for="Password" placeholder="Your Password">
			<span class="text-danger" asp-validation-for="Password"></span>
			<br />
			<label class="col-form-label text-white fw-bold" asp-for="ConfirmPassword">ConfirmPassword :</label>
			<input class="text" asp-for="ConfirmPassword" placeholder="Your ConfirmPassword">
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>

@section ValidationScriptSection
{
	<partial name="_ValidationScriptsPartial" />
}

