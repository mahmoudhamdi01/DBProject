@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details From @Model.Name Employee</h1>

<div class="form-group">
    <label class="col-form-label" asp-for="Name">Name</label>
    <input readonly class="form-control" asp-for="Name" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age">Age</label>
    <input readonly class="form-control" asp-for="Age" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input readonly class="form-control" asp-for="Salary" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address">Address</label>
    <input readonly class="form-control" asp-for="Address" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email">Email</label>
    <input readonly class="form-control" asp-for="Email" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber">PhoneNumber</label>
    <input readonly class="form-control" asp-for="PhoneNumber" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate">HiringDate</label>
    <input readonly class="form-control" asp-for="HiringDate" />
</div>
<div class="form-group mb-3">
    <label class="col-form-label" asp-for="DateOfCreation">DateOfCreation</label>
    <input readonly class="form-control" asp-for="DateOfCreation" />
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-action="Index" class="btn btn-light">Back to List</a>

