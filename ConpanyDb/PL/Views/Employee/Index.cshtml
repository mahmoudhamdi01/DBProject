@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["Message"] is not null)
{
    <div class="alert alert-success" id="myDiv" style="display: none; background-color: #eee; padding: 10px;">
        <h4>@TempData["Message"]</h4>
    </div>

}
<a asp-action="Create" class="btn btn-success mb-3">Create New Employee</a>


@if (Model.Count() > 0)
{
    <h1 class="mb-2">All Employees</h1>

    <form class="row" asp-action="Index">
        <div class=" col-8">
            <input type="text" class="form-control" name="SearchValue" placeholder="Employee's Name" />
        </div>
        <div class=" col-4">
            <input type="submit" value="Search" class="btn btn-info"/>
        </div>
    </form>

    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(e => e.Name)</td>
                <td>@Html.DisplayNameFor(e => e.Age)</td>
                <td>@Html.DisplayNameFor(e => e.Salary)</td>
                <td>@Html.DisplayNameFor(e => e.Address)</td>
                <td>@Html.DisplayNameFor(e => e.Email)</td>
                <td>@Html.DisplayNameFor(e => e.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(e => e.HiringDate)</td>
                <td>@Html.DisplayNameFor(e => e.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(e => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HiringDate</td>
                    <td>@employee.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-id="@employee.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@employee.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@employee.Id"><i class="fa-solid fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h2>There is No Employee</h2>
    </div>
}